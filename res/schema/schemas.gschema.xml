<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gnome-shell-extension-color-picker">
    <schema path="/org/gnome/shell/extensions/color-picker/" id="org.gnome.shell.extensions.color-picker">
        <key type="b" name="enable-systray">
            <default>true</default>
            <summary>enable system tray</summary>
        </key>
        <key type="b" name="enable-shortcut">
            <default>false</default>
            <summary>enable shortcut</summary>
        </key>
        <key type="b" name="enable-notify">
            <default>false</default>
            <summary>enable notify</summary>
        </key>
        <key type="b" name="enable-sound">
            <default>true</default>
            <summary>enable sound</summary>
        </key>
        <key type="b" name="persistent-mode">
            <default>false</default>
            <summary>persistent mode</summary>
        </key>
        <key type="b" name="auto-copy">
            <default>true</default>
            <summary>auto copy color to clipboard</summary>
        </key>
        <key type="b" name="enable-preview">
            <default>true</default>
            <summary>enable preview</summary>
        </key>
        <key type="b" name="enable-format">
            <default>true</default>
            <summary>enable default format</summary>
        </key>
        <key type="b" name="format-menu">
            <default>true</default>
            <summary>enable format menu</summary>
        </key>
        <key type="as" name="color-picker-shortcut">
            <default><![CDATA[['<Super>0']]]></default>
            <summary>shortcut to pick color</summary>
        </key>
        <key type="s" name="menu-key">
            <default>"m"</default>
            <summary>key to open formats menu</summary>
        </key>
        <key type="s" name="quit-key">
            <default>"q"</default>
            <summary>key to quit picking</summary>
        </key>
        <key type="au" name="color-history">
            <default>[]</default>
            <summary>picked color history</summary>
        </key>
        <key type="au" name="color-collection">
            <default>[]</default>
            <summary>picked color collection</summary>
        </key>
        <key type="s" name="systray-dropper-icon">
            <default>""</default>
            <summary>systray dropper icon</summary>
        </key>
        <key type="u" name="preview-style">
            <range min="0" max="2"/>
            <default>0</default>
            <summary>preview style - (0 - lens, 1 - label)</summary>
        </key>
        <key type="u" name="default-format">
            <range min="0" max="127"/>
            <default>0</default>
            <summary>default format - (0 - HEX, 1 - RGB, 2 - HSL, 3..127 - customs)</summary>
        </key>
        <key type="s" name="hex-formatter">
            <default>"#%Rex%Grx%Blx"</default>
            <summary>preset HEX format string</summary>
        </key>
        <key type="s" name="rgb-formatter">
            <default>"rgb(%Re, %Gr, %Bl)"</default>
            <summary>preset RGB format string</summary>
        </key>
        <key type="s" name="hsl-formatter">
            <default>"hsl(%Hu, %Sl, %Ll)"</default>
            <summary>preset HSL format string</summary>
        </key>
        <key type="s" name="oklch-formatter">
            <default>"oklch(%Lo %Co %Ho)"</default>
            <summary>preset OKLch format string</summary>
        </key>
        <key type="av" name="custom-formats">
        <default><![CDATA[[<{'enable': <true>, 'name': <'HSV'>, 'format': <'hsv(%Hu, %Sv, %Va)'>}>, <{'enable': <false>, 'name': <'CMYK'>, 'format': <'cmyk(%Cy, %Ma, %Ye, %Bk)'>}>]]]></default>
            <summary>custom color formats</summary>
        </key>
        <key type="u" name="notify-style">
            <range min="0" max="1"/>
            <default>0</default>
            <summary>notify style - (0 - MSG, 1 - OSD)</summary>
        </key>
        <key type="u" name="notify-sound">
            <range min="0" max="1"/>
            <default>0</default>
            <summary>notify sound - (0 - screenshot, 1 - complete)</summary>
        </key>
        <key type="u" name="menu-size">
            <range min="1" max="16"/>
            <default>8</default>
            <summary>menu item size</summary>
        </key>
        <key type="b" name="menu-style">
            <default>false</default>
            <summary>menu style - (false - history, true - collection)</summary>
        </key>
    </schema>
</schemalist>
